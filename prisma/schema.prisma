generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String
  profile      Profile  @default(USER)
  photoProfile String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  ownedCommunities Community[] @relation("CommunityOwner")
  communityMemberships Community[] @relation("CommunityMembers")

  organizedEvents Event[] @relation("EventOrganizer") 
  eventParticipations Event[] @relation("EventParticipants")
}

enum Profile {
  USER
  ADMIN
}

model Community {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  createdAt   DateTime @default(now())
  ownerId     Int

  owner       User     @relation(fields: [ownerId], references: [id], name: "CommunityOwner")
  members     User[]   @relation("CommunityMembers")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  createdAt   DateTime @default(now())
  organizerId Int

  organizer   User     @relation(fields: [organizerId], references: [id], name: "EventOrganizer")
  participants User[]  @relation("EventParticipants")
}

